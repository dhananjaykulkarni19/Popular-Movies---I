<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/cb_sort_popular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_sort_popular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/cb_sort_popular"
        android:layout_margin="7dp"
        android:text="@string/most_popular"/>

    <CheckBox
        android:id="@+id/cb_sort_highest_rated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cb_sort_popular"/>
    <TextView
        android:id="@+id/tv_sort_highest_rated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/cb_sort_highest_rated"
        android:layout_below="@+id/tv_sort_popular"
        android:layout_margin="7dp"
        android:text="@string/highest_rated"/>

</RelativeLayout>